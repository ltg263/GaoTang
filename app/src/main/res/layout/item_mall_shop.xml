<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_cor_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp"
    android:layout_marginLeft="@dimen/dimen_9dp"
    android:layout_marginRight="@dimen/dimen_9dp"
    android:layout_marginTop="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/iv_shop_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160dp"
        android:src="@drawable/icon_banner"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/tv_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanshans_bold"
        android:includeFontPadding="false"
        android:text="血糖仪家用测血糖"
        android:textColor="@color/color_505050"
        android:textSize="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:singleLine="true"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanshans_bold"
            android:includeFontPadding="false"
            android:text="¥100"
            android:textColor="@color/color_DF2E0E"
            android:textSize="@dimen/dimen_16dp"/>

        <Space
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_shopcart"/>


    </LinearLayout>

</LinearLayout>
