<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_110dp"
                android:layout_margin="@dimen/dimen_15dp"
                android:background="@drawable/shape_cor_white">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:fontFamily="@font/notosanshans_bold"
                    android:includeFontPadding="false"
                    android:text="米娜"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_20dp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:fontFamily="@font/notosanshans_regular"
                    android:includeFontPadding="false"
                    android:text="男"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_18dp" />


                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanshans_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="杭州"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_16dp"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_35dp"/>


                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanshans_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="35岁"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_16dp"
                    android:layout_toRightOf="@id/tv_city"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/dimen_35dp"
                    android:layout_marginLeft="@dimen/dimen_30dp"/>


                <TextView
                    android:id="@+id/tv_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanshans_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="糖尿病1型"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_16dp"
                    android:layout_toRightOf="@id/tv_age"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/dimen_35dp"
                    android:layout_marginLeft="@dimen/dimen_30dp"/>


                <ImageView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="@dimen/dimen_90dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:src="@drawable/icon_head" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/shape_cor_white">


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确诊日期"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018年09月"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="治疗方式"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="口服药物/饮食控制/运动控制"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/shape_cor_white">


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家族史"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同代"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="并发症/合并症"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高血压/肥胖痛风/脂肪肝/胃病"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@drawable/shape_cor_white">


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高体重"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="175cm/60kg"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生活习惯"
                        android:textSize="@dimen/dimen_20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_bold"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_15dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="久坐/高强度工作/喝酒/抽烟/熬夜"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_12dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_cor_white"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康记录"
                    android:textSize="@dimen/dimen_20dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanshans_bold"
                    android:textColor="@color/color_000000"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血糖记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饮食记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运动记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血压记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用药记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="睡眠记录"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="糖化血红蛋白"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医院检查单据"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/dimen_16dp"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dimen_15dp" />

                    <Space
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:src="@drawable/icon_common_right"
                        android:layout_marginRight="@dimen/dimen_15dp"/>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout> 