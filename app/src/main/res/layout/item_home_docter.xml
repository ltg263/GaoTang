<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dimen_10dp">



    <RelativeLayout
        android:layout_width="@dimen/dimen_180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_docter_bg"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米娜"
            android:textSize="@dimen/dimen_16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_45dp"
            android:textColor="@color/color_000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tv_doctor_name"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/tv_doctor_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8900"
                android:textSize="@dimen/dimen_14dp"
                android:textColor="@color/color_2186F7"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定人数"
                android:textSize="@dimen/dimen_12dp"
                android:textColor="@color/color_333333" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tv_doctor_name"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/tv_doctor_workage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="@dimen/dimen_14dp"
                android:textColor="@color/color_2186F7"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持证年数"
                android:textSize="@dimen/dimen_12dp"
                android:textColor="@color/color_333333" />


        </LinearLayout>

        <View
            android:id="@+id/vv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ececec"
            android:layout_below="@id/ll_age"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_15dp"/>


        <TextView
            android:id="@+id/tv_doctor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康顾问-营养师"
            android:textSize="@dimen/dimen_16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColor="@color/color_999999"
            android:layout_below="@id/vv_line"/>

        <Button
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_20dp"
            android:text="详情"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/shape_radius_blue"
            android:layout_below="@id/tv_doctor_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25dp"/>


    </RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/dimen_55dp"
        android:layout_height="@dimen/dimen_55dp"
        android:src="@drawable/icon_head"
        app:riv_border_color="#ffffff"
        app:riv_border_width="10dp"
        app:riv_corner_radius="25dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
