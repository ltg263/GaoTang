<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar_common"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/shape_cor_white_shadow"
                android:layout_marginLeft="@dimen/dimen_13dp"
                android:layout_marginRight="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_orange_code"
                    android:layout_marginLeft="@dimen/dimen_11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信邀请"
                    android:textSize="@dimen/dimen_16dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanshans_medium"
                    android:textColor="@color/color_000000"
                    android:layout_marginLeft="@dimen/dimen_16dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/shape_cor_white_shadow"
                android:layout_marginLeft="@dimen/dimen_13dp"
                android:layout_marginRight="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bind_mobile"
                    android:layout_marginLeft="@dimen/dimen_11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="@dimen/dimen_16dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanshans_medium"
                    android:textColor="@color/color_000000"
                    android:layout_marginLeft="@dimen/dimen_16dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cor_white_shadow"
                android:layout_marginLeft="@dimen/dimen_13dp"
                android:layout_marginRight="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_13dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fmaily"
                        android:layout_marginLeft="@dimen/dimen_11dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家庭成员管理"
                        android:textSize="@dimen/dimen_16dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanshans_medium"
                        android:textColor="@color/color_000000"
                        android:layout_marginLeft="@dimen/dimen_16dp"/>


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:background="@drawable/shape_radius_orange_button"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="添加亲友"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dimen_18dp"
        android:includeFontPadding="false"/>

</LinearLayout> 